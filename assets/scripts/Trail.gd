var point

#Set to top layer so its always visable
func _ready():
	set_as_top_level(true)
#Fade the effect out 	/ add the effect
func _physics_process(delta):
	point = get_parent().global_position
	add_point(point)
	if points.size() > 100:
		remove_point(0)
